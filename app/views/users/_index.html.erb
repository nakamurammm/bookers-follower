

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>

        <td>
          <% user ||= current_user %>
          フォロー数：
            <strong id="follower" class="stat">
              <%= user.follower.count %>
            </strong>
        </td>

        <td>
          <% user ||= current_user %>
          フォロワー数:
            <strong id="followed" class="stat">
              <%= user.followed.count %>
            </strong>
        </td>
        <td>
          <% if current_user != user %>
 　         <% if current_user.following?(user) %>
   　         <%= link_to 'フォロー外す', relationship_path(user_id: user.id), method: :delete %>
           <% else %>
   　         <%= link_to 'フォローする', relationships_path(user_id: user.id), method: :POST %>
           <% end %>
          <% end %>
        </td>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
